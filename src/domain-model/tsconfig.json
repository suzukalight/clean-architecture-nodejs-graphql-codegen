{
  "compilerOptions": {
    /* Basic Options */
    "target": "ES2019",
    "module": "commonjs",
    "allowJs": true,
    // "checkJs": true,
    // "sourceMap": true,
    "rootDir": "./src",
    "outDir": "./lib",

    /* Strict Type-Checking Options */
    "strict": true,

    /* Module Resolution Options */
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,

    /* Advanced Options */
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true
  },
  "exclude": ["node_modules", "lib", "**/_mocks/*", "**/__tests__/*"],
  "include": ["src/**/*"],
  "references": [{ "path": "../common" }, { "path": "../schema" }]
}
